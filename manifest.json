{
  "manifest_version": 2,
  "name": "utilities-extensions",
  "short_name": "utilities-extensions",
  "version": "1.0.0",
  "description": "Random functionalities I need.",
  "icons": {
    "48": "Main/imgs/icon.png",
    "96": "Main/imgs/icon.png"
  },
  "browser_action": {
    "default_icon": "Main/imgs/icon.png",
    "default_popup": "Main/index.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "alarms",
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "js": ["libs/jquery-3.6.0.min.js", "YoutubeSpaceDown/index.js"],
      "matches": ["https://*.youtube.com/*"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["libs/jquery-3.6.0.min.js", "Main/index.js"]
  }
}
